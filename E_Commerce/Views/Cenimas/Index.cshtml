@*Define Model*@
@model IEnumerable<Cenima>

@*Define View Data*@

@{
    @*Write C sharp code here*@
    ViewData["Title"] = "List of All Cenimas";
}

@*Write Code *@


<div  class="text-info text-center">

    <h1><u>All Cenimas List </u></h1>
</div>
<div class=" row">


    <div class="col-md-16 offset-2">
        <table class="table">
            <thead>

                <tr class="text-center" style="text-align:center; color:white;" bgcolor="green">
                    <th> @Html.DisplayNameFor(Model => Model.Logo)  </th>
                    <th> @Html.DisplayNameFor(Model => Model.Name)  </th>
                    <th> @Html.DisplayNameFor(Model => Model.Discription )  </th>
                    <th> Actions  </th>
                </tr>

            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr class=" align-middle">
                        <td>
                            <img class="rounded-circle" src="@item.Logo" alt=" @item.Name" style="max-width:150px" />
                        </td>
                        <td> @Html.DisplayFor(modelitem => item.Name)</td>
                        <td> @Html.DisplayFor(modelitem => item.Discription)</td>

                        <td >
                            <a class="btn btn-primary" asp-controller="Cenimas" asp-action="Edit" asp-route-id="@item.Id"><i class="bi bi-pencil-square"></i> <b>Edit</b>     </a> |
                            <a class="btn btn-primary" asp-controller="Cenimas" asp-action="Details" asp-route-id="@item.Id">
                                <i class="bi bi-eye"></i> <b> Detail  </b>
                            </a> |

                            <a class="btn btn-danger text-yellow" asp-controller="Cenimas" asp-action="Delete" asp-route-id="@item.Id"><i class="bi bi-trash"></i> <b>Delete</b>      </a>


                        </td>

                    </tr>
                }
            </tbody>


        </table>


    </div>




</div>
<div style="position: fixed; right: 25px; bottom: 50px;" class="text-white">
    <a asp-controller="Cenimas" asp-action="Create" class="btn btn-success">
        <i class="bi bi-plus-circle"></i> Add New Cenima
    </a>
</div>